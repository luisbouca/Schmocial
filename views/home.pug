extends layout

block content
	//navbar
	.w3-top
		.w3-bar.w3-left-align.w3-large#navBar.w3-black
			a.w3-bar-item.w3-button.w3-hover-black.w3-hide-medium.w3-hide-large.w3-right(href="javascript:void(0);" onclick="toggleFunction()" title="Toggle Navigation Menu")
				i.fa.fa-bars
			a(href="#").w3-bar-item.w3-button.w3-padding-large.w3-hover-white
				i.fa.fa-home.w3-margin-right
				i Schmocial
			a(href="#" title="News").w3-bar-item.w3-button.w3-hide-small.w3-padding-large.w3-hover-white
				i.fa.fa-globe
			a(href="#" title="Account Settings").w3-bar-item.w3-button.w3-hide-small.w3-padding-large.w3-hover-white
				i.fa.fa-user
			a(href="#" title="Messages").w3-bar-item.w3-button.w3-hide-small.w3-padding-large.w3-hover-white
				i.fa.fa-envelope
			a.w3-bar-item.w3-button.w3-hide-small.w3-right.w3-padding-large.w3-hover-white(title="My Account")
				img.w3-circle(src="/w3images/avatar2.png" style="height:23px;width:23px" alt="Avatar")
			.w3-dropdown-hover-w3-hide-small
				button.w3-button.w3-padding-large.w3-hover-white(title="Notifications")
					i.fa.fa-bell
					span.w3-badge.w3-right.w3-small.w3-white 3
				.w3-dropdown-content.w3-card-4.w3-bar-block(style="width:300px")
					a.w3-bar-item.w3-button(href="#") One new friend request
					a.w3-bar-item.w3-button(href="#") John Doe posted on your wall
					a.w3-bar-item.w3-button(href="#") Jane upvoted your post
	//Grid
	.w3-container.w3-content(style="max-width:1400px;margin-top:80px")
		.w3-row
			//left Column
			.w3-col.m3
				//Profile
				.w3-card.w3-round.w3-black
					.w3-container
						h4.w3-center My Profile
						p.w3-center
							img.w3-circle(src="/w3images/avatar3.png" style="height:106px;width:106px" alt="Avatar")
						hr
						p 
							i.fa.fa-pencil-alt.fa-fw.w3-margin-right.w3-text-theme
							p Designer, UI
						p 
							i.fa.fa-home.fa-fw.w3-margin-right.w3-text-theme
							p London, UK
						p 
							i.fa.fa-birthday-cake.fa-fw.w3-margin-right.w3-text-theme
							p April 1, 1988
				br
				///Accordion
				.w3-card.w3-round
					.w3-black
						button.w3-button.w3-block.w3-left-align.w3-hover-white(onclick="myFunction('Demo1')")
							i.fa.fa-circle-notch.fa-fw.w3-margin-right
							p Groups
						.w3-hide.w3-container#Demo1
							p Some text
						button.w3-button.w3-block.w3-left-align.w3-hover-white(onclick="myFunction('Demo2')")
							i.fa.fa-calendar-check.fa-fw.w3-margin-right
							p Events
						.w3-hide.w3-container#Demo2
							p Some text
						button.w3-button.w3-block.w3-left-align.w3-hover-white(onclick="myFunction('Demo3')")
							i.fa.fa-users.fa-fw.w3-margin-right
							p Photos
						.w3-hide.w3-container#Demo3
							.w3-row-padding
								br
								.w3-half
									img.w3-margin-bottom(src="/w3images/lights.jpg" style="width:100%")
								.w3-half
									img.w3-margin-bottom(src="/w3images/nature.jpg" style="width:100%")
								.w3-half
									img.w3-margin-bottom(src="/w3images/mountains.jpg" style="width:100%")
								.w3-half
									img.w3-margin-bottom(src="/w3images/forest.jpg" style="width:100%")
								.w3-half
									img.w3-margin-bottom(src="/w3images/nature.jpg" style="width:100%")
								.w3-half
									img.w3-margin-bottom(src="/w3images/snow.jpg" style="width:100%")
				br
				.w3-card.w3-round.w3-black.w3-hide-small
					.w3-container
						p Interests
						p
							span.w3-tag.w3-small.w3-hover-white News
							span.w3-tag.w3-small.w3-hover-white W3Schools
							span.w3-tag.w3-small.w3-hover-white Labels
							span.w3-tag.w3-small.w3-hover-white Games
							span.w3-tag.w3-small.w3-hover-white Friends
