			//Right Column
			.w3-col.m2
				.w3-card.w3-round.w3-black.w3-center
					.w3-container
						p Upcoming Events:
						img(src="/w3images/forest.jpg" alt="Forest" style="width:100%;")
						p
							strong Holiday
						p Friday 15:00
						p
							button.w3-button.w3-block.w3-white Info
				br
				.w3-card.w3-round.w3-black.w3-center
					.w3-container
						p Friend Request:
						img(src="/w3images/avatar6.jpg" alt="Avatar" style="width:50%;")
						span Jane Doe
						.w3-row.w3-opacity
							.w3-half
								button.w3-button.w3-block.w3-green.w3-section(title="Accept")
									i.fa.fa-check
							.w3-half
								button.w3-button.w3-block.w3-red.w3-section(title="Decline")
									i.fa.fa-minus
				br
				.w3-card.w3-round.w3-black.w3-padding-16.w3-center
					p ADS
				br
				.w3-card.w3-round.w3-black.w3-padding-32.w3-center
